{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "skipLibCheck": true,

    "jsx": "react-jsx",
    "strict": true,
    "types": ["node"] // Ensure node types are included here
  },
  "type": "module",
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
